.page-content
  .container
    .page-title
      %h1 Questions
      %small Your daily ritual questions

    .row
      .content
        .col-md-4.col-md-offset-4
          = simple_form_for [@user, @question], html: { class: "question-form" } do |f|
            %h3.form-title
              Write questions that are cool
              %br
              .form-group
                %label.control-label.visible-ie8.visible-ie9 Cool question
                .input-group
                  %span.input-group-addon
                    %i.fa.fa-question
                  = f.input :body, placeholder: 'Question', 
                    class: 'form-control placeholder-no-fix', label: false
                = f.submit "Submit", class: "mtl btn btn-primary"

          %ul#question-list
            = render @questions
